using System;

namespace HelloWorld
{
    class Program
    {
        static void Main()
        {
            int annualFee = int.Parse(Console.ReadLine());
            double basketballSneakers = annualFee - (annualFee * 0.4);
            double basketballTeam = basketballSneakers - (basketballSneakers * 0.2);
            double basketballBall = basketballTeam * 0.25;
            double basketballAccessories = basketballBall * 0.2;

            Console.WriteLine(annualFee + basketballSneakers + basketballTeam + basketballBall + basketballAccessories);
        }
    } 
}
